<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loading">

    <ImageView
        android:id="@+id/chibi_horse"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/load_game"
        android:scaleType="centerCrop"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="590dp"
        android:progressDrawable="@drawable/custom_progress_main" />

    <ImageView
        android:id="@+id/loadingImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="-85dp"
        android:layout_marginTop="533dp"
        android:layout_marginEnd="-230dp"
        android:src="@drawable/race_car_animated" />

    <TextView
        android:id="@+id/name_game"
        android:layout_width="309dp"
        android:layout_height="95dp"
        android:layout_above="@+id/progressBar"
        android:layout_marginBottom="-70dp"
        android:layout_marginStart="32dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FF00"
        android:gravity="center" />

    <TextView
        android:id="@+id/load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="670dp"
        android:layout_marginBottom="56dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />


</RelativeLayout>